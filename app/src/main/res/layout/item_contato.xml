<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"

    app:cardMaxElevation="3dp"
    app:cardPreventCornerOverlap="false"

    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_number_contato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/tv_nome_contato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_number_contato"
            android:paddingLeft="16dp"
            android:paddingBottom="24dp"
            android:textSize="14dp"/>

        <ImageView
            android:id="@+id/iv_blockicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_block_black_18dp"
            android:layout_below="@+id/tv_number_contato"
            android:layout_toRightOf="@+id/tv_nome_contato"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tv_number_callblock"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_number_contato"
            android:layout_toRightOf="@+id/iv_blockicon"
            android:layout_height="wrap_content"
            android:text="23"
            android:layout_marginLeft="5dp"/>

        <ImageButton
            android:id="@+id/ic_aux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_close_black_48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>